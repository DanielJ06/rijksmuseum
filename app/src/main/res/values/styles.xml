<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Rijksmuseum" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- TextViews -->
    <style name="Rijks.Painting.Title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/kaisei_opti_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/painting_title</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Rijks.Painting.Author" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/kaisei_opti_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/painting_desc</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>